<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/car_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/car_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/car_item_check"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/car_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/car_item_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/car_item_img" />
    <Button
        android:id="@+id/add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="+"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_item_title"
        app:layout_constraintBottom_toTopOf="@id/car_item_price"/>
    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/add"
        android:text="1"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/car_item_title"
        app:layout_constraintBottom_toTopOf="@id/car_item_price"/>
    <Button
        android:id="@+id/jian"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="-"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/num"
        app:layout_constraintTop_toBottomOf="@id/car_item_title"
        app:layout_constraintBottom_toTopOf="@id/car_item_price"/>
    <TextView
        android:id="@+id/car_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/car_item_img"
        app:layout_constraintLeft_toRightOf="@id/car_item_img"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>